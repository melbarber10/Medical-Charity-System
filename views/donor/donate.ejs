<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper">
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Donate Here Please.</h5>
		</div>
		
		<form action="/donor/donate" method="POST" enctype="multipart/form-data" class="border m-4 my-3 p-4 bg-white rounded-2 shadow">
			<div class="mb-4">
				<label for="category" class="form-label">Donation Category</label>
				<select name="equipment[category]" class="form-select" id="category" required>
					<option value="medical equipment">Medical Equipment</option>
					<option value="clothes">Clothes</option>
					<option value="medicine">Medicine</option>
				</select>
			</div>
			
			<div class="mb-4">
				<label for="itemDescription" class="form-label">Item Description</label>
				<input type="text" name="equipment[itemDescription]" class="form-control" id="itemDescription" placeholder="Describe the donated item..." required>
			</div>
			<div class="mb-4">
                <label for="image" class="form-label">Item Image</label>
                <input type="file" name="image" class="form-control" id="image" required>
            </div>
			
			
			<div class="row">
				<div class="mb-4 col-sm-6">
					<label for="quantity" class="form-label">Quantity</label>
					<input type="number" name="equipment[quantity]" class="form-control" id="quantity" placeholder="Enter quantity of equipment..." required>
				</div>
				
				<div class="mb-4 col-sm-6">
					<label for="condition" class="form-label">Condition</label>
					<select name="equipment[condition]" class="form-select" id="condition" required>
						<option value="new">New</option>
						<option value="used">Used</option>
						<option value="gently used">Gently Used</option>
					</select>
				</div>
			</div>
			
			<div class="row">
				<div class="mb-4 col-sm-8">
					<label for="address" class="form-label">Address for Pickup</label>
					<input type="text" name="equipment[address]" class="form-control" id="address" placeholder="Enter address..." value="<%= currentUser.address %>" required>
				</div>
				
				<div class="mb-4 col-sm-4">
					<label for="phone" class="form-label">Phone</label>
					<input type="text" name="equipment[phone]" class="form-control" id="phone" placeholder="Enter phone..." value="<%= currentUser.phone %>" required>
				</div>
			</div>
			<div class="mb-4 col-sm-4">
				<label for="deliveryTime" class="form-label">Delivery Time</label>
				<input type="datetime-local" name="equipment[deliveryTime]" class="form-control" id="deliveryTime" required>
			</div>
			<div class="mb-4">
				<label for="msg" class="form-label">Message for Manager</label>
				<textarea type="text" name="equipment[donorToAdminMsg]" class="form-control" id="msg" placeholder="Write any message you want to send..."></textarea>
			</div>
			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Submit</button>
		</form>
		
	</div>
</main>

<script>
	const d = new Date();
	const dateString = d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2) + "T" + ("0" + d.getHours()).slice(-2) + ":" + ("0" + d.getMinutes()).slice(-2);
	document.getElementById("time").value = dateString;
</script>
